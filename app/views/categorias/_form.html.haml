= form_for @categoria do |f|
  - if @categoria.errors.any?
    #error_explanation
      %h2= "#{pluralize(@categoria.errors.count, "error")} prohibited this categoria from being saved:"
      %ul
        - @categoria.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :slug
    = f.text_field :slug
  .actions
    = f.submit 'Save'
