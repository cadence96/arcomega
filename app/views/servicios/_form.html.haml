= form_for ([@categoria, @servicio]) do |f|
  - if @servicio.errors.any?
    #error_explanation
      %h2= "#{pluralize(@servicio.errors.count, "error")} prohibited this servicio from being saved:"
      %ul
        - @servicio.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :descripcion
    = f.text_area :descripcion
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :slug
    = f.text_field :slug
  .field
    = f.label :categoria_id
    = f.number_field :categoria_id
  .actions
    = f.submit 'Save'
